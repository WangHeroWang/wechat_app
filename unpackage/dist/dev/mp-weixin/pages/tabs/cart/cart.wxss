  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 700rpx;
  margin: 20rpx auto;
  padding-bottom: 10rpx;
}
.index-List-box image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 5rpx;
}
.index-List-box .index-List-boxtext {
    font-size: 32rpx;
    line-height: 45rpx;
    margin-left: 15rpx;
}
.index-List-box .index-content-price {
    margin-top: 10rpx;
    margin-bottom: 5rpx;
    width: 430rpx;
    margin-left: 15rpx;
}
