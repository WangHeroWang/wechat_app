page {
  background-color: #fff;
}
swiper-item {
  overflow: visible;
  min-height: 30vh;
}
.main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.header {
  background-color: #007AFF;
  width: 92%;
  height: 10vw;
  padding: 0 4%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.header.status {
    padding-top: 25px;
}
.hover {
  background-color: #eee;
}
.orders {
  background-color: #007AFF;
  width: 92%;
  height: 11vw;
  padding: 0 4%;
  margin-bottom: calc(11vw + 40rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  border-radius: 0 0 100% 100%;
  margin-top: -1rpx;
}
.orders .box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 98%;
    padding: 0 1%;
    height: 22vw;
    background-color: #fefefe;
    border-radius: 24rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
    margin-bottom: 40rpx;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.orders .box .ordersyuebox {
      width: 50%;
      text-align: center;
}
.orders .box .ordersyuebox view {
        font-size: 30rpx;
        color: #333333;
}
.orders .box .ordersyuebox text {
        font-size: 24rpx;
        color: #808080;
}
.list {
  width: 100%;
  border-bottom: solid 26rpx #f1f1f1;
  font-size: 28rpx;
}
.list .li {
    width: 92%;
    height: 100rpx;
    padding: 0 4%;
    border-bottom: solid 1rpx #e7e7e7;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.list .li.noborder {
      border-bottom: 0;
}
.list .li .icon {
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      width: 50rpx;
      height: 50rpx;
}
.list .li .icon image {
        width: 50rpx;
        height: 50rpx;
}
.list .li .text {
      padding-left: 20rpx;
      width: 100%;
      color: #666;
}
.list .li .to {
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      width: 40rpx;
      height: 40rpx;
}
.orderborder {
  border-right: 1px solid #808080;
}
.title {
  background-color: #f9f9f9;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 80%;
  margin: 0 auto;
  box-sizing: border-box;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}
.title view {
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    display: block;
    width: 50%;
    border: none;
}
.title view:after {
      border: none;
      border-radius: 0;
}
.active {
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 10rpx;
}
.content {
  background: #F8F8F8;
}
swiper {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 auto;
          flex: 1 1 auto;
}
swiper :first-child {
  overflow: visible;
}
.kongindex {
  background-color: #007AFF;
  margin: 0 auto;
}
.kongindex .kongindeximg {
    width: 500rpx;
    text-align: center;
    background-color: #007AFF;
}
.kongindex .kongindeximg image {
